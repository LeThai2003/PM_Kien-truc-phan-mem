html
  head
    title Accept Success
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
    style.
      body {
        background: #f8f9fa;
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      }
      .btn-custom {
        font-size: 1rem;
        padding: 0.5rem 1.5rem;
      }
  body
    .container
      .row.justify-content-center
        .col-md-6
          .card.text-center.p-4
            h3.text-success.mb-3 Successfully Joined Project!
            p.text-muted.mb-4 Welcome! You are now part of the project team.
            a.btn.btn-success.btn-custom(href=`http://localhost:5173/project/${projectId}`) Return to Project

    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js") 
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
